<h1>Book your chosen unit</h1>

<% if @booking.errors.any? %>
    <h2>The following errors prevented you from booking this unit:</h2>
    <ul> 
        <% @booking.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @booking do |f| %>
    <p> 
        <%= f.label :email %> <br>
        <%= f.email_field :email %>
    </p>
    <p> 
        <%= f.label :name %> <br>
        <%= f.text_field :name %>
    </p>
    <p> 
        <%= f.label :address %> <br>
        <%= f.text_area :address %>
    </p>
    <p> 
        <%= f.label :address %> <br>
        <%= f.date_field :date %>
    </p>
    <p>
        <%= f.submit %>
    </p>
    <p>
    <h4><%= link_to "Cancel", root_path%></h4>
    </p>

<% end %>